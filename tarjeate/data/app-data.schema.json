{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["decks","games","config"],
  "properties": {
    "decks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","name","cards","passwordHash","passwordSalt"],
        "properties": {
          "id": {"type":"string"},
          "name": {"type":"string"},
          "description": {"type":"string"},
          "passwordHash": {"type":"string"},
          "passwordSalt": {"type":"string"},
          "cards": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id","question","answer","level","mastered","stats"],
              "properties": {
                "id": {"type":"string"},
                "question": {"type":"string"},
                "answer": {"type":"string"},
                "level": {"type":"integer","minimum":1,"maximum":6},
                "mastered": {"type":"boolean"},
                "stats": {
                  "type": "object",
                  "properties": {
                    "hits": {"type":"integer"},
                    "misses": {"type":"integer"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "games": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","deckId","playerName","date","score","cardResults"],
        "properties": {
          "id": {"type":"string"},
          "deckId": {"type":"string"},
          "playerName": {"type":"string"},
          "date": {"type":"string","format":"date"},
          "score": {"type":"number"},
          "cardResults": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "cardId": {"type":"string"},
                "hits": {"type":"integer"},
                "misses": {"type":"integer"}
              }
            }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "githubRepo": {"type":"string"},
        "githubBranch": {"type":"string"},
        "dataPath": {"type":"string"},
        "syncMode": {"enum":["local","github"]}
      }
    }
  }
}
